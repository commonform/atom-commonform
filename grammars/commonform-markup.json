{
  "scopeName": "source.commonform",
  "fileTypes": ["commonform"],
  "name": "Common Form Markup",
  "repository": {
    "use": {
      "name": "string.unquoted",
      "begin": "<",
      "end": ">"
    },
    "field": {
      "name": "variable",
      "begin": "\\[",
      "end": "\\]"
    },
    "reference": {
      "name": "keyword",
      "begin": "{",
      "end": "}"
    },
    "definition": {
      "name": "constant",
      "begin": "\"\"",
      "end": "\"\""
    },
    "illegal": {
      "name": "invalid.illegal",
      "match": "[^\\x00-\\x7F]"
    }
  },
  "patterns": [
    {
      "name": "comment.line",
      "match": "^\\s*#.+"
    },
    {
      "comment": "Form",
      "begin": "^\\s*(\\\\)(.+)?((\\\\)|!!)",
      "captures": {
        "1": {"name":"storage.modified"},
        "2": {"name":"constant.language"},
        "3": {"name":"storage.modified"}
      },
      "end": "$",
      "patterns": [
        {"include":"#illegal"},
        {"include":"#use"},
        {"include":"#definition"},
        {"include":"#field"},
        {"include":"#reference"}
      ]
    }
  ]
}
